  <div class="container">
    
  <header class="header">
    <div class="row">
      <div class="col-sm-3">
        
      <img src="../images/logo.jpg" class="logo">
      </div>
      <div class="col-sm-5">
        
      <div class="name_page">
        <p>Basket Market</p>
      </div>
      </div>
      <div class="col-sm-4">
    
      <div class="buttons_header pull-right">
		{{#if logined}}
		<div class="button_login"><a class="btn btn-outline-success" href="/user/profile" type="submit">Profile</a></div>
        <div class="button_login"><a class="btn btn-outline-success" href="/user/logout" type="submit">Log out</a></div>
		{{else}}
        <div class="button_login"><a class="btn btn-outline-success" href="/user/login" type="submit">Sign in</a></div>
        <div class="button_login"><a class="btn btn-outline-success" href="/user/signup" type="submit">Sign up</a></div>
		{{/if}}
      </div>
      </div>
    </div>
  </header>
  </div>

<div class="container">
  
	<div class="questions">
	    <div class="row">
	    	{{#each questions}}
	    		<div class="question col-2">
	            <p>Question {{this.number}}</p>
	            {{#each this.question}}
		            <div class="form-check">
		                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios{{this.number}}"
		                    value="option {{this.number}}">
		                <label class="form-check-label" for="exampleRadios{{this.number}}">
		                    Answer {{this.number}}
		                </label>
		            </div>
	            {{/each}}
	    	{{/each}}
	    </div>
	</div>

	<div class="row">
		<div class="col-sm-2 list-of-products">
		  	<div class="list-group">
		  		{{#each categories}}
					<a href="/{{this.id}}" class="btn btn-outline-success" class="list-group-item list-group-item-action active">{{this.name}}</a>
				{{/each}}
		    </div>
		</div>
		
		<div class="col-sm-10 products container">
		    <div class="row">
		    	{{#each products}}
		        <div class="card col-3" style="width: 18rem;">
		            <img src="../images/egg.jpg" class="card-img-top" alt="...">
		            <div class="card-body">
						<h5 class="card-title">Card title</h5>
						<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
						<a href="#" class="btn btn-outline-success">Add to basket</a>
		            </div>
		        </div>
		        {{/each}}
	    	</div>
		</div>
	</div>
</div>