<div class="profile_grid">
  <div style="text-align: center">
    <div>
      <img src='../images/user_male2-512.png' style="text-align: end;" class="img_profile">
      <p>{{user.username}}</p>
    </div>
    <hr>
  </div>
  <div>
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          {{user.email}}
        </div>
        <div class="col-sm-6">
          {{user.address}}
        </div>
      </div>
    </div>
  </div>
  <br>

  <form action="/user/edit-preferences" method="post">
  <div>
    <p>Choose your benefits of food:</p>
    <div>
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_meat" id="defaultCheck1" {{#if user.do_not_eat_meat}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat meat
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_fish" id="defaultCheck1" {{#if user.do_not_eat_fish}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat fish
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_dairy_product" id="defaultCheck1" {{#if user.do_not_eat_dairy_product}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat dairy products
              </label>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_lactose" id="defaultCheck1" {{#if user.do_not_eat_lactose}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat lactose
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_egg" id="defaultCheck1" {{#if user.do_not_eat_egg}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat egg
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_sugar" id="defaultCheck1" {{#if user.do_not_eat_sugar}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat sugar
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="true" name="do_not_eat_gluten" id="defaultCheck1" {{#if user.do_not_eat_gluten}}checked{{/if}}>
              <label class="form-check-label" for="defaultCheck1">
                Don`t eat gluten
              </label>
            </div>
          </div>
        </div>
      </div>


      <div style="text-align: center;">
        <button class="btn btn-outline-success" type="submit" style="width:50%">Edit preferences</button>
      </div>
    </div>
    <div style="    text-align: center;">
      <a href="/" class="btn btn-outline-success" style="width:50%">To the main page</a>
    </div>
  </div>
  </form>
  
</div>
</div>
<div class="basket">
    <p>Basket</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th score="col">Category</th>
          <th scope="col">Product</th>
          <th scope="col">Price</th>
          <th scope="col">----</th>

        </tr>
      </thead>
      <tbody>
        {{#each prod_in_basket}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{this.cat_name}}</td>
          <td>{{this.prod_name}}</td>
          <td>{{this.price}}$</td>
          <td>
            <a href="/user/delete_from_basket/{{this.product_id}}" class="btn btn-outline-success">Delete</a>
          </td> 
          {{/each}}
        </tr>
      </tbody>
    </table>
    <div style="    text-align: center;">
      <a href="/checkout" class="btn btn-outline-success" style="width:50%">Checkout</a>
    </div>
  </div>